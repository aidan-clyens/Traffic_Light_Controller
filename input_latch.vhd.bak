LIBRARY ieee;
USE ieee.std_logic_1164.ALL;
USE ieee.numeric_std.ALL;

ENTITY input_latch IS PORT (
	clk_in		:	in std_logic;
	rst_n			:	in std_logic;
	enable		:	in std_logic;
	sync_input	:	in	std_logic;
	latch_clear	:	in std_logic;
	data_output	:	out std_logic
);
END input_latch;

ARCHITECTURE Latch_Design OF input_latch IS
	
	BEGIN

	
	PROCESS(clk_in, rst_n) IS
			
			BEGIN
		
			
			IF (rst_n = '0') THEN
			
				data_output <= '0';
				
			ELSIF(rising_edge(clk_in)) THEN
				
				IF(enable = '1') THEN
				
					IF(sync_input = '1') THEN
					
						data_output <= '1';
						
					ELSIF(latch_clear = '1') THEN
					
						data_output <= '0';
						
					END IF;
				
				END IF;
				
			END IF;
	
	END PROCESS;


END ARCHITECTURE Latch_Design;